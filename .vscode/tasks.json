{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Maxima Script",
			"type": "shell",
			"command": "${env:MAXIMA_PATH}\\bin\\maxima.bat",
			"args": [
				"-b",
				"${fileBasename}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false
			}
		},
		{
			"label": "Create New Day File",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-File",
				"${workspaceFolder}\\new_day.ps1"
			],
			"group": "build"
		}
	]
}

